<div class="contents row">
  <% @memos.each do |memo| %>
    <div class="content_post" style="background-image: url(<%= memo.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_memo_path(memo.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', memo_path(memo.id), method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= memo.text %></p>
      <span class="name">
        <%= memo.name %>
      </span>

    </div>
  <% end %>
</div>


